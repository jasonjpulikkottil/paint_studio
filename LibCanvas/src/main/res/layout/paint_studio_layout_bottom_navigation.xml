<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/paint_studio_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/paint_studio_colorPrimary"
        app:itemIconTint="@color/paintstudio_color_picker_white"
        app:itemTextAppearanceActive="@style/BottomNavigationViewLabel"
        app:itemTextAppearanceInactive="@style/BottomNavigationViewLabel"
        app:itemTextColor="@color/paintstudio_color_picker_white"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_paint_studio_bottom_navigation" />
</RelativeLayout>
